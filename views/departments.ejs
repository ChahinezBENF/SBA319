<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Departments</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <header class="header">
    <h1>Departments</h1>
  </header>

  <nav class="navigation">
    <ul class="nav-list">
      <li><a href="/">Home</a></li>
      <li><a href="/employees/view">Employees</a></li>
      <li><a href="/departments/view">Departments</a></li>
      <li><a href="/roles/view">Roles</a></li>
    </ul>
  </nav>

  <main class="main-content">

    <div class="search-bar">
      <form action="/departments/search" method="GET">
        <input type="text" name="q" placeholder="Search Departments by ID or Name..." />
        <button type="submit">Search</button>
      </form>
    
    </div>

    <table class="employee-table">
             <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (departments.length === 0) { %>
            <tr>
              <td colspan="3">No departments found. Try a different search term.</td>
            </tr>
          <% } else { %>
            <% departments.forEach(department => { %>
              <tr>
                <td><%= department.Did %></td>
                <td><%= department.name %></td>
                <td>
                  <!-- Update Form -->
                  <form action="/departments/<%= department._id %>?_method=PUT" method="POST" style="display:inline;">
                    <input type="text" name="name" value="<%= department.name %>" required />
                    <button type="submit">Update</button>
                  </form>
                  <!-- Delete Form -->
                  <form action="/departments/<%= department._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

      <!-- Add Department Form -->
    <div class="add-department">
            <form action="/departments/" method="POST">
        <input type="number" name="Did" placeholder="Department ID" required />
        <input type="text" name="name" placeholder="Department Name" required />
        <button type="submit">Add Department</button>
      </form>
    </div>

  </main>

  <footer class="footer">
    <p>&copy; 2025 Chahinez Company. All rights reserved.</p>
  </footer>
</body>

</html>