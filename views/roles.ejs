<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Roles</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="header">
    <h1>Roles</h1>
  </header>

  <nav class="navigation">
    <ul class="nav-list">
      <li><a href="/">Home</a></li>
      <li><a href="/employees/view">Employees</a></li>
      <li><a href="/departments/view">Departments</a></li>
      <li><a href="/roles/view">Roles</a></li>
    </ul>
  </nav>


  <main class="main-content">

    <div class="search-bar">
      <form action="/roles/search" method="GET">
        <input type="text" name="q" placeholder="Search Roles by ID or Name..." />
        <button type="submit">Search</button>
      </form>
    
    </div>

    <table class="employee-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (roles.length === 0) { %>
          <tr>
            <td colspan="3">No roles found. Try a different search term.</td>
          </tr>
        <% } else { %>
          <% roles.forEach(role => { %>
            <tr>
              <td><%= role.Rid %></td>
              <td><%= role.title %></td>
              <td>
                <!-- Update Form -->
                <form action="/roles/<%= role._id %>?_method=PUT" method="POST" style="display:inline;">
                  <input type="text" name="title" value="<%= role.title %>" required />
                  <button type="submit">Update</button>
                </form>
                <!-- Delete Form -->
                <form action="/roles/<%= role._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <!-- Add Role Form -->
    <div class="add-role">
          <form action="/roles" method="POST">
        <input type="number" name="Rid" placeholder="Role ID" required />
        <input type="text" name="title" placeholder="Role Title" required />
        <button type="submit">Add Role</button>
      </form>
    </div>

  </main>

  <footer class="footer">
    <p>&copy; 2025 Chahinez Company. All rights reserved.</p>
  </footer>
</body>
</html>
